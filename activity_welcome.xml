<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_menu"
    tools:context=".Welcome">


    <Button
        android:id="@+id/Activity_Three_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="#FFEB3B"
        android:text="@string/stretches1"
        android:textAllCaps="false"
        android:textColor="#2196F3"
        app:layout_constraintBottom_toTopOf="@+id/Activity_Four_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Activity_Four_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="#FFEB3B"
        android:text="@string/upper_body_workout"
        android:textColor="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Activity_Five_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="#FFEB3B"
        android:text="@string/lower_body_workout"
        android:textColor="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Activity_Four_button" />

    <Button
        android:id="@+id/Park_Button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="#2196F3"
        android:text="@string/find_the_nearest_park"
        android:onClick="ParkNowButton"
        android:textColor="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Gym_Button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="#2196F3"
        android:text="@string/find_the_nearest_gym"
        android:onClick="GymNowButton"
        android:textColor="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/Select_Workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elegantTextHeight="false"
        android:text="@string/select_a_workout"
        android:textAllCaps="true"
        android:textColor="#2196F3"
        android:textIsSelectable="false"
        android:textSize="34sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/Activity_Three_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>