<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/cardview_margin"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/exercise_title"
            style="@style/ExerciseTitle"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/name_placeholder"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/image_exercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/exercise_difficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/difficulty_placeholder"/>

        <TextView
            android:id="@+id/exercise_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detail_placeholder"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/exercise_reps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reps_placeholder"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/exercise_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vid_placeholder"
            android:padding="8dp"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>